<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vishnu.emersave.PostingPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/overall_title"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:fontFamily="@font/times"
                android:text="Information"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/version_title"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:fontFamily="@font/times"
                android:text="Version"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/version_num"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/times"
                android:text="Version 1.6.2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:fontFamily="@font/times"
                android:text="User's Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/times"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:fontFamily="@font/times"
                android:text="User's Email"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/times"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone_id_title"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:fontFamily="@font/times"
                android:text="Phone ID"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/phone_id_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/times"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/group_id_title"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:fontFamily="@font/times"
                android:text="Group ID"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/group_id_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/times"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

